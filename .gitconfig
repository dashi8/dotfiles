[core]
    excludesfile = ~/.gitignore_global
    editor = vim
[merge]
    tool = vimdiff
[alias]
    s = status
    co = checkout
    g = log --graph --topo-order --all --date=short --pretty=format:'%C(green)%h %C(blue)[%cd] %C(cyan)@%cn%C(red)%d%C(reset)%n%s%n'
    ci = commit
    difff = diff --word-diff
[include]
    path = ~/.gitconfig.local

